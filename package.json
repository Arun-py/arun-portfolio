{
  "name": "arun-portfolio",
  "version": "1.0.0",
  "description": "MERN Stack Portfolio for Arun Thanigaimani",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm run build --prefix client",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": ["portfolio", "mern", "iot", "developer"],
  "author": "Arun Thanigaimani",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "nodemailer": "^6.9.7",
    "body-parser": "^1.20.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
